{
  "version": 2,
  "builds": [
    { "src": "client/package.json",
     "use": "@vercel/static-build",
   "config": {
    "distdir": "build"
   }
    },
    {
        "src":"server/package.json",
         "use": "@vercel/node" }
  ],
  "routes": [
    { 
        "src": "/api/(.*)",
         "dest": "/server/server.js" 
    },
    { "src": "/(.*)",
     "dest": "/client/build/$1"
     }
  ]
}